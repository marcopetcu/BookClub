<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Buton simplu pentru creare club -->
    <Button
        android:id="@+id/btnCreateClub"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Create Club"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Text simplu unde poți afișa de test lista de cluburi -->
    <TextView
        android:id="@+id/txtClubsPlaceholder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="No clubs yet"
        android:textSize="16sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/btnCreateClub"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
